<!-- Welcome Message -->
<section class="container-fluid bg-lt-blue py-5">
    <div class="row py-3 py-md-4">
        <div class="col">
            <h1 class="text-white text-center h1style">Update your profile, <span
                    class="text-purple">{{user.displayName}}</span></h1>
        </div>
    </div>
</section>

<!-- Profile Content -->
<section class="container-fluid bg-light">
    <div class="row">
        <div class="col"></div>
        <div class="col-lg-3 mt-3 d-flex flex-column justify-content-center text-center">
            <div class="card border border-purple mx-auto">
                <img src={{user.picture}} class="card-img-top" alt="Profile Picture">
                <div class="card-body">
                    <h5 class="card-title">{{user.displayName}}</h5>
                    <h6 class="card-subtitle mb-1 text-muted">Nickname: {{user.nickname}}</h6>
                    <p class="card-text">Email: {{user.email}}</p>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="container bg-white mt-lg-n5 mt-4 mt-lg-0 pt-2 border border-purple">
                <form>
                    <div class="form-row">
                        <div class="form-group col-4">
                            <label for="input" class="col-form-label">First Name</label>
                            <input type="text" class="form-control" id="firstname">
                        </div>
                        <div class="form-group col-4">
                            <label for="input" class="col-form-label">Last Name</label>
                            <input type="text" class="form-control" id="lastname">
                        </div>
                        <div class="form-group col-4">
                            <label for="input" class="col-form-label">Nickname</label>
                            <input type="text" class="form-control" id="nickname">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <label for="input" class="col-form-label">What is your hidden talent?</label>
                            <input type="text" class="form-control" id="talent">
                        </div>
                        <div class="form-group col-6">
                            <label for="input" class="col-form-label">What is your biggest pet peeve?</label>
                            <input type="text" class="form-control" id="peeve">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <label for="input" class="col-form-label">What is the weirdest food you've ever
                                eaten?</label>
                            <input type="text" class="form-control" id="food">
                        </div>
                        <div class="form-group col-6">
                            <label for="input" class="col-form-label">What is your most favorite vehicle?</label>
                            <input type="text" class="form-control" id="vehicle">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <label for="input" class="col-form-label">What tv show are you currently
                                watching?</label>
                            <input type="text" class="form-control" id="tvshow">
                        </div>
                        <div class="form-group col-6">
                            <label for="input" class="col-form-label">What book are you currently
                                reading?</label>
                            <input type="text" class="form-control" id="book">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <label for="inputTeam">Your Team</label>
                            <select id="inputTeam" class="form-control">
                                {{!-- Dropdown options created via JS --}}
                            </select>
                        </div>
                        <div class="form-group col-6">
                            <label for="pictureUpload">Update Profile Picture</label>
                            <input type="file" class="form-control-file" id="pictureUpload">
                        </div>
                    </div>
                </form>
                <div class="row justify-content-center pb-3">
                    <a href="/user" class="btn bg-lt-blue text-white btn-text px-4" id="updateProfile">Update Profile</a>
                </div>
            </div>
        </div>
        <div class="col"></div>
    </div>
</section>

