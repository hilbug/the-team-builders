{{!-- Welcome Message --}}
<section class="container-fluid bg-new py-5">
    <div class="row py-3 py-md-4">
        <div class="col">
            <h1 class="text-white text-center h1style">Welcome to Team Builder, <span
                    class="text-purple">{{user.displayName}}</span></h1>
        </div>
    </div>
</section>

{{!-- Profile Content --}}
<section class="container-fluid bg-light">
    <div class="row">
        <div class="col"></div>
        <div class="col-xl-3 mt-3 d-flex flex-column justify-content-center text-center">
            <div class="card border border-purple mx-auto">
                <img src={{user.picture}} class="card-img-top" alt="Profile Picture">
                <div class="card-body">
                    <h5 class="card-title">{{user.displayName}}</h5>
                    <h6 class="card-subtitle mb-1 text-muted">Nickname: {{user.nickname}}</h6>
                    <p class="card-text">Email: {{user.email}}</p>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <div class="container bg-white border border-purple mt-xl-n5 mt-4 py-3">
                <div class="row my-4 d-flex justify-content-around">
                    <a href="/user" class="btn bg-lt-blue text-white btn-text btn-width2 pt-5 mb-4 mb-xl-0">Update
                        Profile</a>
                    <a type="button" data-toggle="modal" data-target="#viewTeamModal"
                        class="btn bg-lt-blue text-white btn-text btn-width2 pt-5" id="viewTeams">View Teams</a>
                </div>
                <div class="row mb-4 d-flex justify-content-around">
                    <a type="button" data-toggle="modal" data-target="#createTeamModal"
                        class="btn bg-lt-blue text-white btn-text btn-width2 pt-5 mb-4 mb-xl-0">Create A
                        Team</a>
                    <a href="/cardgame" class="btn bg-lt-blue text-white btn-text btn-width2 pt-5">Start A
                        Game</a>
                </div>
            </div>
            <div class="d-none d-sm-none d-md-block container text-center bg-new py-3 mt-4 text-purple">
                <h3 class="btn-text dashboard-banner mb-0">Build Teams | Foster Creativity | Strengthen Culture</h3>
            </div>
            <div class="d-none d-sm-block d-md-none container d-flex flex-column bg-new py-3 mt-4 text-purple">
                <h3 class="btn-text dashboard-banner mb-0 text-center">Build Teams</h3>
                <h3 class="btn-text dashboard-banner mb-0 text-center">Foster Creativity</h3>
                <h3 class="btn-text dashboard-banner mb-0 text-center">Strengthen Culture</h3>
            </div>
        </div>
        <div class="col"></div>
    </div>
</section>

{{!-- View Teams Modal --}}
<div class="modal fade" id="viewTeamModal" tabindex="-1" aria-labelledby="viewTeamModal" aria-hidden="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewTeamModalLabel">Current Teams</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="teams_list">
                    {{#each team.teams}}
                    <li>{{this.teamName}}</li>
                    {{/each}}
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn bg-lt-blue text-white btn-text px-4" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

{{!-- Create Team Modal --}}
<div class="modal fade" id="createTeamModal" tabindex="-1" aria-labelledby="createTeamModal" aria-hidden="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createTeamModalLabel">Create A Team</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="input" class="col-form-label">Team Name</label>
                    <input type="text" class="form-control" id="newTeamName">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn bg-lt-blue text-white btn-text px-4" id="saveNewTeamBtn">Save changes</button>
            </div>
        </div>
    </div>
</div>

{{!-- Footer --}}
<footer class="footer-margin bg-light">
    <div class="navbar fixed-bottom navbar-dark bg-purple justify-content-center">
        <span class="navbar-brand footer-font blue align-middle">Copyright &copy;2020
            &ThickSpace;|&ThickSpace;
            Team Builder</span>
    </div>
</footer>