            <ul class="navbar-nav flex-row justify-content-md-end justify-content-center">
                {{#if user }}
                <li class="nav-item">
                    <a class="nav-link px-2 mx-2 current-nav navstyle" href="/dashboard">Home<span
                            class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link px-3 py-0 mt-2 border-left navstyle" href="/user">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link px-3 py-0 mt-2 border-left border-right navstyle" href="/cardgame">Game</a>
